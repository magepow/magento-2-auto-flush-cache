<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <!-- Configuration save event -->
    <event name="controller_action_postdispatch_adminhtml_system_config_save">
        <observer name="auto_flush_cache_system_config_save"
            instance="Magepow\AutoFlushCache\Observer\FlushCacheOnConfigSave"/>
    </event>

    <!-- Design configuration change event -->
    <event name="admin_system_config_changed_section_design">
        <observer name="auto_flush_cache_changed_section_design"
            instance="Magepow\AutoFlushCache\Observer\FlushCacheOnDesignChange"/>
    </event>

    <!-- CMS page save event -->
    <event name="cms_page_prepare_save">
        <observer name="auto_flush_cache_cms_page_prepare_save"
            instance="Magepow\AutoFlushCache\Observer\FlushCacheOnCmsPageSave"/>
    </event>

    <!-- Product save event (disabled by default for performance) -->
    <event name="controller_action_catalog_product_save_entity_after">
        <observer name="auto_flush_cache_product_save_entity_after"
            instance="Magepow\AutoFlushCache\Observer\FlushCacheOnProductSave"/>
    </event>

    <!-- Category save event (disabled by default for performance) -->
    <event name="catalog_category_prepare_save">
        <observer name="auto_flush_cache_category_prepare_save"
            instance="Magepow\AutoFlushCache\Observer\FlushCacheOnCategorySave"/>
    </event>
</config> 